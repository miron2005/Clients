# Сервер
PORT=3001
NODE_ENV=development

# База данных (в docker-compose хост = postgres)
DATABASE_URL=postgresql://postgres:postgres@postgres:5432/yclients?schema=public

# JWT
JWT_ACCESS_SECRET=dev_access_secret_change_me
JWT_REFRESH_SECRET=dev_refresh_secret_change_me
JWT_ACCESS_TTL_SECONDS=900
JWT_REFRESH_TTL_SECONDS=2592000

# Redis / BullMQ
REDIS_HOST=redis
REDIS_PORT=6379

# Telegram Bot API
TELEGRAM_BOT_TOKEN=
TELEGRAM_WEBHOOK_SECRET=dev_webhook_secret

# WhatsApp провайдер (mock|vendor)
WHATSAPP_PROVIDER=mock

# Публичный base URL (для ссылок в сообщениях)
APP_BASE_URL=http://localhost:3000

# CORS
CORS_ORIGIN=http://localhost:3000

